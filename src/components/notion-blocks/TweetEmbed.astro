---
export interface Props {
  url: URL
}

const { url } = Astro.props
---

<blockquote class="twitter-tweet">
  <a href={url}></a>
</blockquote>

<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>

<style>
  .tweet-embed {
    width: 100%;
    max-width: 640px;
    margin: auto;
  }
  .tweet-embed div:first-child div:first-child {
    margin: auto;
  }
</style>